RewriteEngine On
RewriteRule ^read/([0-9a-zA-Z_-]*)$ read.php?id=$1 [NC,L]
RewriteRule ^read/data/([0-9a-zA-Z_-]*)$ read.php?data_esami=$1 [NC,L]
RewriteRule ^read/utente/([0-9a-zA-Z_-]*)$ read.php?codice_fiscale=$1 [NC,L]
RewriteRule ^read read.php [NC,L]
RewriteRule ^delete/([0-9]*)$ delete.php?id=$1 [NC,L]
RewriteRule ^create create.php [NC,L]
RewriteRule ^update update.php [NC,L]